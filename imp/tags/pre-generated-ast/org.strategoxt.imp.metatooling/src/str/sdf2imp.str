module create-ast-classes

imports
  libstratego-lib
  sdf-options
  
  create-ast-classes

strategies

  main-sdf2imp =
    rules(BasePackage := ""); // default output dir
    
    xtc-io-wrap(
      sdf-main-module-option // -m <mod>
    + output-dir-option
    , create-ast-classes
    )

  output-dir-option = // TODO2: Use base package name
    ArgOption(
      "-p"
    , rules(BasePackage := <id>)
    , !"-p <directory>                Set base package name"
    )