module Common

exports

  sorts
    Id Int String CommentChar RuleId Sort Constructor ConstructorId

  lexical syntax
  
    [a-zA-Z][a-zA-Z0-9\_]* -> Id
    "-"? [0-9]+            -> Int
    "\"" ~[\"\n]* "\""     -> String
    
    [\ \t\n\r]             -> LAYOUT
    
    [\*]                             -> CommentChar
    "/*" (~[\*] | CommentChar)* "*/" -> LAYOUT
    "//" ~[\n\r]* [\n\r]             -> LAYOUT
  
  lexical restrictions
  
  	CommentChar -/- [\/]
  	Int         -/- [0-9]
  	Id          -/- [a-zA-Z0-9\_]

  context-free restrictions

    LAYOUT? -/- [\ \t\n\r]
    
    LAYOUT? -/- [\/].[\/]
    LAYOUT? -/- [\/].[\*]

  context-free syntax
  
    Id     -> Sort {cons("Sort")}
    Id "*" -> Sort {cons("ListSort")}

    Sort "." "_" -> Sort {bracket}
    
    "_" "." Id -> Constructor {cons("Constructor")}
            Id -> ConstructorId {cons("ConstructorId")}
    
    Sort                   -> RuleId
    Constructor            -> RuleId
    Sort "." ConstructorId -> RuleId {cons("SortAndConstructor")}

