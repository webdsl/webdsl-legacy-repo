testsuite EditorServices

topsort Module

test Empty module
  "module foo" -> Module("foo", Imports([]), [])

test Empty module with imports
  "module foo imports bar, baz" -> Module("foo", Imports(["bar", "baz"]), [])
  
test Larger module
  "module foo
   imports bar, baz
  
   folding
     sortX
  
   outliner
     sortY
  
   colorer
     sortZ : dark red
  
  " ->
  Module(
    "foo"
  , Imports(["bar", "baz"])
  , [ Folding([Sort("sortX")])
    , Outliner([Sort("sortY")])
    , Colorer([Rule(Sort("sortZ"), ColorName(_), None, NORMAL)])
    ]
  )
  
test Token-based colors
  "module foo
  
   colorer
     TK_LAYOUT : green italic
     TK_VAR    : 1 2 3 bold
  
  " ->
  Module(
    "foo"
  , Imports([])
  , [ Colorer(
        [ Rule(Sort("TK_LAYOUT"), ColorName(GREEN()), None(), ITALIC())
        , Rule(
            Sort("TK_VAR")
          , ColorRGB("1", "2", "3")
          , None()
          , BOLD()
          )
        ]
      )
    ]
  )
