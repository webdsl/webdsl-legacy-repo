<project name="webdsl-build-clean" default="clean-all">
  
  
  <target name="clean-app">
    <echo>Removing .servletapp directory.</echo>
    <delete dir="${currentdir}/.servletapp" />
  </target>
  
  
  <target name="clean-generated-java">
    <echo>Removing .servletapp/src</echo>
    <delete dir="${currentdir}/.servletapp/src" />
    <echo>Removing .servletapp/bin</echo>
    <delete dir="${currentdir}/.servletapp/bin/WEB-INF/classes" />
  </target>
  
  
  <target name="clean-parse-cache">
    <echo>Removing .webdsl-parsecache directory.</echo>
    <delete dir="${currentdir}/.webdsl-parsecache" />
  </target>
  
  
  <target name="clean">
    <antcall target="clean-app"/>	
  </target>
  
  
  <target name="clean-all">
    <antcall target="clean-app"/>	
    <antcall target="clean-parse-cache"/>	
  </target>
  
  
</project>
