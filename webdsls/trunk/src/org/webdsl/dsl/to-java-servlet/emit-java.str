module org/webdsl/dsl/to-java-servlet/emit

imports
  libstrategolib
  libjava-front

rules

  /* Takes a java compilation unit and stores it to be emitted later */

 emit-java-code =
    ?cu@CompilationUnit(_, _, _)
    ; rules(
        JavaClassesToEmit :+= cu
      )
 
  emit-web-xml =
    ?do@Document(_, _, _)
    ; rules(
        WebXMLToEmit := XmlFile(["."], "web.xml", do)
      )
