rules // if

   if-to-java-servlet :
     If(e1, bsit1, bsif1) -> java|[ if(e2) ~bsit2 else ~bsif2 ]|
     where bsit2 := <statement-to-java-servlet> bsit1
         ; bsif2 := <statement-to-java-servlet> bsif1
         ; e2 := <expression-to-java-servlet> e1

rules // for

   for-to-java-servlet : // No where clause, with order by clause
     ForStmt(x, s, e1, Filter(True(), obe1, l), bstm1) -> stm|[
        {
          java.util.ArrayList<t2> x_lst = new java.util.ArrayList<t2>(e2);
          Collections.sort(x_lst, new Comparator<t2>() {
            public int compare(t2 o1, t2 o2) {
              stm1
            }
          });
          for (t1 x : x_lst)
              ~bstm2
        } ]|
     where not(<?OrderAscending(Null())> obe1)
         ; e2 := <expression-to-java-servlet> e1
         ; t1 := <java-type> s
         ; t2 := <java-wrapper-type> s
         ; x_lst := <newname> "lst"
         ; bstm2 := <statement-to-java-servlet> bstm1
         ; if <?OrderAscending(_)> obe1 then
             stm1 := java|[ return o1.compareTo(o2); ]|
           else
             stm1 := java|[ return o2.compareTo(o1); ]|
           end

   for-to-java-servlet : // No where clause, no order by clause
     ForStmt(x, s, e1, Filter(True(), OrderAscending(Null()), l), bstm1) -> stm|[
        for (t1 x : e2)
            ~bstm2
        ]|
     where e2 := <expression-to-java-servlet> e1
         ; t1 := <java-type> s
         ; bstm2 := <statement-to-java-servlet> bstm1

   for-to-java-servlet : // With where clause
     ForStmt(x, s, e1, Filter(we, obe1, l), bstm1) -> java|[
        for (t1 x : e2)
          if(e3)
            ~bstm2
         ]|
     where not(True() := we)
         ; e2 := <expression-to-java-servlet> e1
         ; e3 := <expression-to-java-servlet> we
         ; t1 := <java-type> s
         ; t2 := <java-wrapper-type> s
         ; bstm2 := <statement-to-java-servlet> bstm1

rules // return

   return-to-java-servlet :
     Return(e1) -> java|[ return e2; ]|
     where InAction ; e2 := <call-to-view-string> e1

   return-to-java-servlet :
     Return(e1) -> java|[ return e2; ]|
     where InFunction; e2 := <expression-to-java-servlet> e1

   cancel-to-java-servlet :
     Cancel(e1) -> bstm* |[ entityManager.clear(); return e2; ]|
     where InAction ; e2 := <call-to-view-string> e1

   cancel-to-java-servlet :
     Cancel(e1) -> bstm* |[ entityManager.clear(); return e2; ]|
     where InFunction ; e2 := <expression-to-java-servlet> e1

   goto-to-java-servlet :
     GoTo(ThisCall(p, args)) -> bstm* |[
       org.jboss.seam.faces.Redirect x_redinstance = new org.jboss.seam.faces.Redirect();
       x_redinstance.setViewId(~string:String([Chars(viewId)]));
       ~*parameter
       x_redinstance.execute();
     ]|
     where viewId := <concat-strings>["/", p, ".xhtml"]
       ; fargs := <TemplateArguments> p
       ; x_redinstance := <newname> "redirect"
       ; parameter := <zip(arg-to-redirect-parameter-java-servlet(|x_redinstance))> (fargs, args)

   arg-to-redirect-parameter-java-servlet(|x_redinstance) :
     (Arg(name, sort), Var(x)) -> java|[ x_redinstance.setParameter(x_fargname, x.getId()); ]|
     where <builtin-java-type> sort
         ; x_fargname := <concat-strings>["\"", name, "\""]

   arg-to-redirect-parameter-java-servlet(|x_redinstance) :
     (Arg(name, sort), Var(x)) -> java|[ x_redinstance.setParameter(x_fargname, x.getId()); ]|
     where <defined-java-type> sort
         ; x_fargname := <concat-strings>["\"", <concat-strings>[name, "_id"], "\""]

rules

   qid-to-java-servlet :
     Qualified(qid, x) -> java|[ e.x_get() ]|
     where x_get := <concat-strings>["get", <capitalize-string> x]
         ; e := <qid-to-java-servlet> qid

   qid-to-java-servlet :
     x -> java|[ x ]|
     where <is-string> x

   // @note : this is compensating for an erroneous annotation of component
   // accessess
   qid-to-java-servlet :
     FieldAccess(Var(x),y) -> expr|[ this.y ]|
     where
         "Component" := <type-of> Var(x)

   vardecl-to-java-servlet :
     VarDeclInit(x, s, e1) -> bstm|[ t x = e2; ]|
     where t := <java-type> s
         ; e2 := <expression-to-java-servlet> e1

   vardecl-to-java-servlet :
     VarDecl(x, s) -> bstm|[ t x = e; ]|
     where t := <java-type> s
         ; e := <java-type-default-value> s

rules // expressions
   expression-to-java-servlet :
     Cast(e1, s) -> CastRef(t, java|[ e2 ]|)
     where e2 := <expression-to-java-servlet> e1
         ; t := <java-type> s

   expression-to-java-servlet :
     InColl(e1, e2) -> expr|[ e4.contains(e3) ]|
     where e3 := <expression-to-java-servlet> e1
         ; e4 := <expression-to-java-servlet> e2

   expression-to-java-servlet :
     Add(x, y) -> expr|[ ~xt + ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Sub(x, y) -> expr|[ ~xt - ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Mul(x, y) -> expr|[ ~xt * ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Div(x, y) -> expr|[ ~xt / ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Mod(x, y) -> expr|[ ~xt % ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Eq(x, y) -> expr|[ org.webdsl.tools.Utils.equal(~xt, ~yt) ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     NotEq(x, y) -> expr|[ !org.webdsl.tools.Utils.equal(~xt, ~yt) ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     LargerThan(x, y) -> expr|[ ~xt > ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     LargerThanOrEqual(x, y) -> expr|[ ~xt >= ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     SmallerThan(x, y) -> expr|[ ~xt < ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     SmallerThanOrEqual(x, y) -> expr|[ ~xt <= ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Not(x) -> expr|[ !(~x2) ]|
     where x2 := <expression-to-java-servlet> x

   expression-to-java-servlet :
     And(x, y) -> expr|[ ~xt && ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

   expression-to-java-servlet :
     Or(x, y) -> expr|[ ~xt || ~yt ]|
     where xt := <expression-to-java-servlet> x
         ; yt := <expression-to-java-servlet> y

