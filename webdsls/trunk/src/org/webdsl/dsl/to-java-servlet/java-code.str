    x -> e |[ x ]|
    where not(<?Qualified(_,_)> x)
          
  assignment-to-java-servlet-exp-helper :
    Qualified(e, x) -> e |[ e1.get#x() ]|
    where e1 := <assignment-to-java-servlet-exp-helper> e    
