module org/webdsl/dsl/to-java-servlet/types/entity

imports
  libstrategolib

imports
  libwebdsl-front
  
rules

  call-to-java-servlet :
    Call(e1, "persist", []) -> e2
    where e2 := <call-to-java-servlet> Call(e1, "save", [])

  call-to-java-servlet :
    Call(e1, "save", []) -> expr|[ {| e2.validateSave(); | hibSession.save(e2) |} ]|
    where <type-of;is-entity-type> e1
    with  e2 := <expression-to-java-servlet> e1

  call-to-java-servlet :
    Call(e1, "remove", []) -> e2
    where e2 := <call-to-java-servlet> Call(e1, "delete", [])

  call-to-java-servlet :
    Call(e1, "delete", []) -> expr|[ {| e2.validateDelete(); | hibSession.delete(e2) |} ]|
    where <type-of;is-entity-type> e1
    with  e2 := <expression-to-java-servlet> e1