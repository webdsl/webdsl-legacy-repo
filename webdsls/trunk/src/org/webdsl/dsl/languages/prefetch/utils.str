module org/webdsl/dsl/languages/prefetch/utils

// Usefull for debugging of query analysis
/*
imports
  libstratego-gpp
  libstratego-aterm

strategies

  log-traversal-summary-basic =
    make-set
    ; map(info(|["Traversal: ", <id>]))

  log-traversal-summary-table(|col1,col2,col3) =
