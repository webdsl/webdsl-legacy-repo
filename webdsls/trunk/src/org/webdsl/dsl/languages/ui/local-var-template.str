module org/webdsl/dsl/languages/ui/local-var-template
//similar to org/webdsl/dsl/languages/action/request-var but local var is gone when it leaves scope

imports
  libwebdsl-front
      
rules
  
  desugar-action :    
    LocalScopeTemplate(TemplateVarDeclInit(x, srt, e)) -> LocalScopeTemplateVarDeclInit(x, srt, e)
    
  desugar-action :    
    LocalScopeTemplate(TemplateVarDecl(x, srt)) -> LocalScopeTemplateVarDecl(x, srt)
    