module Python-Lexical
exports
  sorts Id IntConst

  lexical syntax
    [\ \t\n]  -> LAYOUT
    "#" ~[\n\r]* [\n\r]   -> LAYOUT
    [a-zA-Z\_][a-zA-Z0-9\_]* -> Id
    "*"                      -> Id
    [0-9]+                   -> IntConst
    "\"" ~[\"\n]* "\""       -> String
    "'" ~[\'\n]* "'"         -> String
  
  context-free restrictions
    LAYOUT? -/- [\ \t\12\n\r]
    Id      -/- [a-zA-Z0-9]
    
