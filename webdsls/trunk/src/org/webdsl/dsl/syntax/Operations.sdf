module Operations

%% syntax for enumeration types

exports
  sorts Section Definition

  context-free syntax

	"operations" SectionName Definition* -> Section {cons("Operations")}
	
	"operation" Id "(" FormalArg ")" "{"
	   OperationElement*	"}"            -> Definition {cons("Operation")}

  "status" Id "{" Property* Function* "}" -> Entity {cons("StatusEntity")}
	
	"who" "{" Exp "}"                    -> OperationElement {cons("OperationWho")}
	"when" "{" Exp "}"									 -> OperationElement {cons("OperationWhen")}
	"do" Block													 -> OperationElement {cons("OperationDo")}
	"view" "{" TemplateElement* "}"      -> OperationElement {cons("OperationView")}
