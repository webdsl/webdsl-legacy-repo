module statements

exports

  sorts Statement
  context-free syntax
    Exp ":=" Exp ";"     -> Statement {cons("Assign")}
    Exp ";"              -> Statement {cons("ExpStat")}
    "return" PageRef ";" -> Statement {cons("ReturnPage")}

  sorts VarDecl
  context-free syntax
    "var" ID ":" Type          -> VarDecl {cons("VarDecl")}
    "var" ID ":" Type ":=" Exp -> VarDecl {cons("VarDeclInit")}
    VarDecl                    -> Statement
    