module actiontest

entity State {
  count : Int
}

define page root() {  
  var st : State := State{}
  action go() {
    st.save();
    return count(st); 
  }
  form{
    input(st.count)
    submit go() { "Go" }
  }
}

define page count(st : State) {
  var i : String := ""
  action next() {
    st.count := st.count.inc();
    return count(st);
  }
  action add(i : Int) {
    st.count := st.count.add(i);
    return count(st);
  }
  output(st.count)  
  form{ 
    input(i)
    submit next() { "Next" } 
    submit inc() { "Add One" } // action not defined
    submit next("3") { "Add Three" } // too many arguments
    submit add() { "Add Many" } // too few arguments
    submit add(i) { "Add Many" } // argument has wrong type
  } 
}