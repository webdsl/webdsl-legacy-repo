module actions

rules // assignment

  check :
    Assign(lval, e) -> (<id>, ["Type of lhs ('", <pp>t1, "') does not match type of rhs ('", <pp>t2, "')"])
    where t1 := <type-of>lval; t2 := <type-of> e; not(<eq>(t1, t2))

rules // return

  check :
    ReturnPage(x, e*) -> (x, ["Page not defined"])
    where not(<Template> x)
