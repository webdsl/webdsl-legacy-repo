module template-vars

imports templates
 
signature
  constructors   
    VarDeclElem : ID * Type * Exp -> Element // var x : t := e

rules // name resolution

rename :
  VarDeclElem(x, t, e1) -> VarDeclElem(y, t, e2)
  with e2 := <rename-all> e1
  with y := <rename-var> (x, t)
       
rules // checking

check :
  VarDeclElem(x, t, e) -> (e, $[Expression should have type '[<pp>t]'])
  where t2 := <type-of> e
  where require(<eq>(t, t2))
