aspect PrettyPrint {

  syn String ASTNode.pp() = "<Node>";
  
  syn String Module.pp() {
    StringBuilder buf = new StringBuilder();
    buf.append("module ");
    buf.append(getName());
    buf.append(' ');
    // for (Definition d : getDefinitionList()) {
    for (int i = 0; i < getNumDefinition(); i++) {
      Definition d = getDefinition(i);
      buf.append(d.pp());
      buf.append("\n");
    }
    return buf.toString();
  }

}

