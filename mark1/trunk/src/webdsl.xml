<web-app>

  <context-param>
    <param-name>applicationPrefix</param-name>
    <param-value>/user/</param-value>
  </context-param>  
  
  <context-param>
      <param-name>webdsl.emailfrom</param-name>
      <param-value>Eelco Visser &lt;visser@acm.org&gt;</param-value>
  </context-param>

  <context-param>
      <param-name>webdsl.emailsmtp</param-name>
      <param-value>smtp.xs4all.nl</param-value>
  </context-param>

  <servlet>
    <servlet-name>ShowUsers</servlet-name>
    <servlet-class>webdsl/user/ShowUsers</servlet-class>
  </servlet>

  <servlet-mapping>
	<servlet-name>ShowUsers</servlet-name>
	<url-pattern>/showusers/</url-pattern>
  </servlet-mapping>

